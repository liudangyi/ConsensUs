<%= form_for(membership) do |f| %>
  <% if membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(membership.errors.count, "error") %> prohibited this membership from being saved:</h2>

      <ul>
      <% membership.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :decision_id %>

  <% if membership.user.nil? or membership.new_record? %>
    <div class="field">
      <%= f.label :invited_email %>
      <%= f.text_field :invited_email %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :role %>
    <%= f.radio_button :role, :owner %> Owner
    <%= f.radio_button :role, :member %> Member
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
