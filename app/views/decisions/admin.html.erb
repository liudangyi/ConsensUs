<div class="row">
  <div class="col s4">

    <div class="card">
      <div class="card-content">
        <span class="card-title">Info</span> <%= link_to 'Edit', edit_decision_path(@decision), data: { modal: true } %>
          <br>
          <b>Description</b>
          <p><%= @decision.description %></p>
          <br>
          <b>URL</b>
          <br>
          <a href="/s/<%= @decision.short_url %>">consensus.ucsd.edu/s/<%= @decision.short_url %></a> <br>
      </div>
    </div>

    <div class="card">
      <div class="card-content">
        <span class="card-title">Commmittee</span>
        <ul>
          <% @decision.memberships.includes(:user).each do |membership| %>
            <li>
              <a href="<%= edit_membership_path membership %>" class="<%= 'text-muted' if membership.user.nil? %>" data-modal="true">
                <% if membership.user %>
                  <%= membership.user.name %> &lt;<%= membership.user.email %>&gt;
                <% else %>
                  <%= membership.invited_email %>
                <% end %>
              </a>
              <% if membership.owner? %>
                <span class="label label-primary">Owner</span>
              <% end -%>
            </li>
          <% end -%>
          <li>
            <%= link_to 'New Member', new_membership_path(decision_id: @decision.id), data: { modal: true } %>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <style media="screen">
    .expand-detail {
      display: none;
    }
  </style>

  <div class="col s8">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Alternatives</span>
        <ul class="collection">
          <% @decision.alternatives.each do |alternative| %>
            <li class="collection-item">
                <span style="background-color: <%= alternative.color %>;">&nbsp;&nbsp;&nbsp;&nbsp;</span>&nbsp;
                <!-- <span contenteditable="true">c<%= alternative.name %></span> -->
                <span><%= alternative.name %></span>
                <!-- <%= link_to 'Destroy', alternative, method: :delete, data: { confirm: 'Are you sure?' } %> -->
                || <a href="#" class="expand-toggle">[DETAIL]</a>
                <div class="secondary-content">
                  <a class="secondary-content" href="<%= alternative_path(alternative) %>" data-method="delete" data-confirm="Are you sure?" rel="nofollow">
                    <i class="material-icons">delete</i>
                  </a>
                  <a class="secondary-content" href="<%= edit_alternative_path(alternative) %>" data-modal="true">
                    <i class="material-icons">mode_edit</i>
                  </a>
                </div>

                <div class="expand-detail">
                  <%= alternative.description %>
                </div>

            </li>
          <% end -%>
            <li background-color="grey">
              <div class="center">
                <a href="<%= new_alternative_path(decision_id: @decision.id) %>" data-modal="true"><i class="material-icons">add</i></a>
              </div>
            </li>
        </ul>
      </div>
    </div>

    <div class="card">
      <div class="card-content">
        <span class="card-title">Criteria</span>
        <ul>
          <% @decision.criteria.each do |criterium| %>
            <li>
              <h4><a href="<%= edit_criterium_path(criterium) %>" data-modal="true"><%= criterium.name %></a></h4>
              <%= criterium.description %>
            </li>
          <% end -%>
          <li><a href="<%= new_criterium_path(decision_id: @decision.id) %>" data-modal="true">New criterium</a></li>
        </ul>
      </div>
    </div>

  </div>
</div>
