<%= form_for(alternative) do |f| %>
<div class="modal-content">
  <h4><%= title %></h4>
  <% if alternative.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(alternative.errors.count, "error") %> prohibited this alternative from being saved:</p>

      <ul>
      <% alternative.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :decision_id %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <script type="text/javascript">
    $('#alternative_color').minicolors()
  </script>

  <div class="field">
    <%= f.label :color %>
    <%= f.text_field :color %>
  </div>
</div>

  <div class="modal-footer">
    <%= f.submit class: 'modal-action modal-close waves-effect waves-green btn-flat' %>
  </div>
<% end %>
