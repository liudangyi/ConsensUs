                    <span class="input-field">(<%= @minimum_password_length %> characters minimum)</span>
                    <% end %>
                </div>
                </div>

                <div class="row" style="margin: 0px">
                <div class='input-field col s12' style="padding: 0%">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: 'validate' %>
