                <%= devise_error_messages! %>

                <div class='row'  style="margin: 0px">
                <div class="input-field col s12" style="padding: 0%">
                <%= f.text_field :name, autofocus: true, class: 'validate' %>
                <%= f.label :name %>
                </div>
                </div>

                <div class='row' style="margin: 0px">
